{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "group:jsUnitTest",
    "group:vite",
    "helpers:pinGitHubActionDigestsToSemver",
    "security:openssf-scorecard",
    ":approveMajorUpdates",
    ":enableVulnerabilityAlerts",
    ":pinAllExceptPeerDependencies"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/|\\.)dvmrc$/"],
      "depNameTemplate": "denoland/deno",
      "datasourceTemplate": "github-releases",
      "matchStrings": ["(?<currentValue>\\d+.\\d+.\\d+)\\s"]
    }
  ],
  "internalChecksFilter": "strict",
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "extends": ["packages:eslint"],
      "groupName": "eslint packages"
    },
    {
      "groupName": "prettier packages",
      "matchPackageNames": ["prettier**", "@ianvs/prettier-plugin-sort-imports"]
    },
    {
      "extends": ["packages:react"],
      "groupName": "react packages"
    },
    {
      "extends": ["packages:stylelint"],
      "groupName": "stylelint packages"
    },
    {
      "groupName": "playwright monorepo",
      "matchPackageNames": [
        "playwright",
        "@playwright/test",
        "mcr.microsoft.com/playwright"
      ]
    },
    {
      "groupName": "deno monorepo",
      "matchPackageNames": ["denoland/deno"]
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["denoland/deno"],
      "versioning": "regex:^(?<compatibility>.*)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ],
  "enabledManagers": ["dockerfile", "github-actions", "custom.regex"],
  "patch": {
    "rebaseWhen": "behind-base-branch"
  },
  "rebaseWhen": "conflicted",
  "osvVulnerabilityAlerts": true
}
